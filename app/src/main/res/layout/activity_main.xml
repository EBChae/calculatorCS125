<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputBox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:text="gravity" />

    <Button
        android:id="@+id/calculateBtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonOnClick"
        android:text="Calculate" />

    <TextView
        android:id="@+id/outputBox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press Calculate"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-------------------------------------------------------------------------------------" />

    <Button
        android:id="@+id/equation1Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonOnClick"
        android:text="ΔX = ((v0 + vf)/2)t" />

    <Button
        android:id="@+id/equation2Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="vf = v0 + at" />

    <Button
        android:id="@+id/equation3Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ΔX = v0*t + (1/2)at^2" />

    <Button
        android:id="@+id/equation4Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="vf^2 = v0^2 + 2aΔX" />

    <Button
        android:id="@+id/graphButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonOnClick"
        android:text="Show Grpah" />

</LinearLayout>